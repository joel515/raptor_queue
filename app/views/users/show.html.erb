<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.jobs.any? %>
      <h3>Jobs (<%= @user.jobs.count %>)</h3>
      <ol class="jobs">
        <%= render @jobs %>
      </ol>
      <%= paginate @jobs %>
    <% end %>
  </div>
</div>
