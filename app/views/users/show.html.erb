<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <h1><%= "#{@user.name} (#{@user.username})" %></h1>
      <h2><%= @user.company %></h2>
      <h2><%= @user.email %></h2>
    </section>
  </aside>
  <div class="col-md-9">
    <% if @user.jobs.any? %>
      <h3>Jobs (<%= @user.jobs.count %>)</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Id</th>
            <th>Status</th>
            <th>Solver</th>
            <th>Nodes</th>
            <th>PPN</th>
            <th>Submitted at</th>
          </tr>
        </thead>
        <%= render @jobs, cols: { id: true, status: true, config: true,
                                  nodes: true, processors: true,
                                  submitted_at: true } %>
      </table>
      <%= paginate @jobs %>
    <% end %>
  </div>
</div>
