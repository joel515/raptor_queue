<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <h2><%= @user.email %></h2>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.jobs.any? %>
      <h3>Jobs (<%= @user.jobs.count %>)</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Solver</th>
            <th>Nodes</th>
            <th>PPN</th>
          </tr>
        </thead>
        <%= render @jobs, cols: { name: true, status: true, config: true,
                                  nodes: true, processors: true } %>
      </table>
      <%= paginate @jobs %>
    <% end %>
  </div>
</div>
