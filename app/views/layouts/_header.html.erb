<header>
  <div class="container">
    <nav class="navbar navbar-default navbar-fixed-top">
      <ul class="nav navbar-header">
        <li><%= link_to image_tag("mkei_logo_155x60.png",
                                  alt: "Milwaukee Institute Logo"),
                                  'https://www.mkei.org/',
                                  id: "logo" %></li>
      </ul>
      <ul class="nav navbar-nav">
        <li><%= link_to "RaptorQueue", root_path, id: "app-title" %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to root_path do %>
            <span class="glyphicon glyphicon-home"></span> Home
          <% end %>
        </li>
        <li>
          <%= link_to help_path do %>
            <span class="glyphicon glyphicon-book"></span> Help
          <% end %>
        </li>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li>
              <%= link_to users_path do %>
                <span class="glyphicon glyphicon-list"></span> Users
              <% end %>
            </li>
          <% end %>
          <li>
            <%= link_to jobs_path do %>
              <span class="glyphicon glyphicon-tasks"></span> Jobs
            <% end %>
          </li>
          <li>
            <%= link_to '#' do %>
              <span class="glyphicon glyphicon-plus"></span> New Job
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-cog"></span> Account
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to current_user do %>
                  <span class="glyphicon glyphicon-user"></span> Profile
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_path(current_user) do %>
                  <span class="glyphicon glyphicon-wrench"></span> Settings
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to logout_path, method: "delete" do %>
                  <span class="glyphicon glyphicon-log-out"></span> Log out
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to login_path do %>
              <span class="glyphicon glyphicon-log-in"></span> Log in
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
