<%= form_for(@job) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <form class="form-horizontal">
    <div class="form-group">
      <%= f.label :name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, placeholder: "Job name" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :config, "Solver", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select :config, Job::SOLVERS.map { |k,v| [v, k.to_s] }%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :nodes, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :nodes, placeholder: "Req'd nodes" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :processors, "PPN", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :processors, placeholder: "Req'd PPN" %>
      </div>
    </div>
    <div class="form-group">
      <%= form_tag({action: :upload}, multipart: true) do %>
        <%= file_field_tag 'picture' %>
      <% end %>
    </div>

  </form>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
